{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/Reg&Log/login.css') }}" rel="stylesheet">
{% endblock %}


{% block body %}
<div class="bodyLogin">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="container my-5">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="username">Email</label>
            <input type="text" value="{{ last_username }}" name="_email" id="username" class="form-control" autocomplete="username" required autofocus>
            <label for="password">Password</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>

            <button class="btn btn-success btn-block" type="submit">Sign in</button>

            <hr><p style="text-align: center;">o</p><hr>

            <div class="register-link-container">
                <a href="/register" class="btn btn-secondary btn-block">Registrarse</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
